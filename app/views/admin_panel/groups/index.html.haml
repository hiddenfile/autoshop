=render :partial => 'head', :locals => {:title => 'Категории'}

%table#tablecontent.table
  %tr.sortheader
    %th.first= sort_link @search, :name, "Наименование"
    %th.last

  - @groups.each do |group|
    %tr{:class => cycle("odd", "even")}
      %td=group.name
      %td.links_column
        = link_to 'Перейти', admin_panel_group_path(group)
        = link_to 'Редактировать', edit_admin_panel_group_path(group)
        = link_to 'Удалить', admin_panel_group_path(group), :confirm => 'Are you sure?', :method => :delete
.pagine
  %div
    = will_paginate @groups
    .clear