=render :partial => 'head', :locals => {:title => 'Производители'}

%table#tablecontent.table
  %tr.sortheader
    %th.first= sort_link @search, :name, "Название"
    %th.last

  - @companies.each do |company|
    %tr{:class => cycle("odd", "even")}
      %td=company.name
      %td.links_column
        = link_to 'Перейти', admin_panel_company_path(company)
        = link_to 'Редактировать', edit_admin_panel_company_path(company)
        = link_to 'Удалить', admin_panel_company_path(company), :confirm => 'Are you sure?', :method => :delete
.pagine
  %div
    = will_paginate @companies
    .clear