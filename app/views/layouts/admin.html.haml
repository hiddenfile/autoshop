!!!
%html
  %head
    %title Авто магазин
    = stylesheet_link_tag :admin_panel
    = javascript_include_tag :application
    = csrf_meta_tag
  %body
    #container
      #header
        %h1
          =link_to 'Авто портал', '/'

        #user-navigation
          %ul.wat-cf
            %li
              -#=link_to 'Профиль', edit_admin_registration_path
            %li
              =link_to 'Выход', destroy_admin_session_path, {:class=>"logout"}

        #main-navigation
          %ul.wat-cf
            %li{:class=>((@curr_path==admin_panel_companies_path)? "main-navigation_selected" :"")}
              =link_to 'Производители',admin_panel_companies_path

            %li{:class=>((@curr_path==admin_panel_groups_path)? "main-navigation_selected" :"")}
              =link_to 'Категории',admin_panel_groups_path

            %li{:class=>((@curr_path==admin_panel_products_path)? "main-navigation_selected" :"")}
              =link_to 'Товары', admin_panel_products_path

            %li{:class=>((@curr_path==admin_panel_admins_path)? "main-navigation_selected" :"")}
              =link_to 'Администраторы', admin_panel_admins_path

            %li{:class=>((@curr_path==admin_panel_users_path)? "main-navigation_selected" :"")}
              =link_to 'Пользователи', admin_panel_users_path

            %li{:class=>((@curr_path==admin_panel_photos_path)? "main-navigation_selected" :"")}
              =link_to 'Картинки', admin_panel_photos_path

      #wrapper.wat-cf
        .flash
          - flash.each do |type, message|
            .message{:class => "#{type}"}
              %p #{message}


        #main.content
          .block
            .content
              = yield

        #sidebar
          -#= yield :sidebar
      #footer
        .block
          %p= link_to("© Copyright 2009-#{Time.now.year} Face IT",'http://faceit-team.com/',:style => 'text-decoration: none; color:#e8e8e8;')
